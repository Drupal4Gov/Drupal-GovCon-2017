    &lt;div class=&quot;field field--name-field-timeslot-time field--type-entityreference field--label-above&quot;&gt;&lt;div class=&quot;field__label&quot;&gt;Time:&amp;nbsp;&lt;/div&gt;&lt;div class=&quot;field__items&quot;&gt;&lt;div class=&quot;field__item even&quot;&gt;07/24/2015 - 14:00-07/24/2015 - 14:45&lt;/div&gt;&lt;/div&gt;&lt;/div&gt;&lt;div class=&quot;field field--name-field-timeslot-room field--type-entityreference field--label-above&quot;&gt;&lt;div class=&quot;field__label&quot;&gt;Room:&amp;nbsp;&lt;/div&gt;&lt;div class=&quot;field__items&quot;&gt;&lt;div class=&quot;field__item even&quot;&gt;Balcony A&lt;/div&gt;&lt;/div&gt;&lt;/div&gt;  &lt;/div&gt;
