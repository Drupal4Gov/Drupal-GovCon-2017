{
    "name": "acquia/blt-project",
    "description": "Project template for Drupal 8 sites built with BLT.",
    "type": "project",
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "asset-packagist": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.3",
        "acquia/blt": "^11.0",
        "acquia/drupal-spec-tool": ">=2.0.0",
        "acquia/lightning": "^4",
        "acquia/memcache-settings": "*",
        "bower-asset/blazy": "^1.8",
        "drupal-composer/drupal-scaffold": "^2.5.4",
        "drupal/acquia_connector": "^1.5.0",
        "drupal/acquia_purge": "^1.0",
        "drupal/acsf": "^1.32.0",
        "drupal/adminimal_admin_toolbar": "^1.0",
        "drupal/better_exposed_filters": "^3.0@alpha",
        "drupal/block_exclude_pages": "^1.2",
        "drupal/captcha": "^1.0-beta4",
        "drupal/cloudflare": "^1.0.0-alpha7",
        "drupal/cog": "^1.10",
        "drupal/components": "*@stable",
        "drupal/config_ignore": "^2.1",
        "drupal/config_split": "^1.0.0",
        "drupal/config_update": "1.5.0",
        "drupal/context": "^4.0@beta",
        "drupal/core": "^8.8",
        "drupal/devel": "^2.0.0",
        "drupal/environment_indicator": "^3.0.0-beta1",
        "drupal/extlink": "^1.0",
        "drupal/field_group": "^3.0",
        "drupal/field_permissions": "1.x-dev",
        "drupal/flag": "^4.0-beta1",
        "drupal/focal_point": "^1.0@beta",
        "drupal/google_analytics": "*@stable",
        "drupal/honeypot": "^1.20",
        "drupal/linkicon": "^1.4",
        "drupal/panelizer": "^5",
        "drupal/purge": "^3.0.0-beta6",
        "drupal/qa_accounts": "^1.0@alpha",
        "drupal/r4032login": "dev-1.x",
        "drupal/recaptcha": "^2.4",
        "drupal/redirect": "^1.0",
        "drupal/seckit": "^1.2",
        "drupal/shield": "^1.1",
        "drupal/simple_sitemap": "3.x-dev",
        "drupal/smart_trim": "^1.0",
        "drupal/svg_image": "^1.8",
        "drupal/twig_xdebug": "1.x-dev",
        "drupal/views_field_view": "^1.0",
        "drupal/webform": "^5.8",
        "drupal/webform_views": "5.x-dev",
        "drupal/xmlsitemap": "^1.0",
        "mglaman/drupal-check": "1.0.14"
    },
    "require-dev": {
        "acquia/blt-require-dev": "11.x-dev",
        "drupal/console": "^1.0.0-rc13"
    },
    "scripts": {
        "post-install-cmd": [
            "PhantomInstaller\\Installer::installPhantomJS"
        ],
        "post-update-cmd": [
            "PhantomInstaller\\Installer::installPhantomJS"
        ],
        "post-create-project-cmd": [
            "blt internal:create-project:init-repo"
        ],
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "nuke": [
            "rm -rf vendor composer.lock docroot/core docroot/modules/contrib docroot/profiles/contrib docroot/themes/contrib",
            "@composer clearcache --ansi",
            "@composer install --ansi"
        ]
    },
    "extra": {
        "blt": {
            "update": true
        },
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "docroot/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "docroot/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "docroot/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "docroot/libraries": [
                "type:drupal-library"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "drush/Commands/{$name}": [
                "type:drupal-drush",
                "type:drupal-drush",
                "type:drupal-drush"
            ]
        },
        "patches": {
            "drupal/core": {
                "Ignore front end vendor folders to improve directory search performance": "https://www.drupal.org/files/issues/ignore_front_end_vendor-2329453-116.patch"
            }
        },
        "drupal-scaffold": {
            "initial": {
                "sites/default/default.services.yml": "sites/default/services.yml",
                "sites/default/default.settings.php": "sites/default/settings.php"
            },
            "excludes": [
                "sites/development.services.yml",
                ".htaccess",
                "robots.txt"
            ]
        },
        "enable-patching": true,
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        }
    },
    "autoload": {
        "psr-4": {
            "Example\\": "blt/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Tests\\PHPUnit\\": "tests/phpunit/src/"
        }
    }
}
