{
    "name": "acquia/blt-project",
    "description": "Project template for Drupal 8 sites built with BLT.",
    "type": "project",
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "asset-packagist": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        "jquery-ui-touch-punch": {
            "type": "package",
            "package": {
                "name": "jquery-ui/jquery-ui-touch-punch",
                "version": "dev-master",
                "type": "drupal-library",
                "extra": {
                    "installer-name": "jquery-ui-touch-punch"
                },
                "dist": {
                    "url": "https://api.github.com/repos/furf/jquery-ui-touch-punch/zipball",
                    "type": "zip"
                },
                "require": {
                    "composer/installers": "~1.0"
                }
            }
        },
        "superfish": {
            "type": "package",
            "package": {
                "name": "superfish/superfish",
                "version": "1.7.0",
                "type": "drupal-library",
                "extra": {
                    "installer-name": "superfish"
                },
                "dist": {
                    "url": "https://api.github.com/repos/joeldbirch/superfish/zipball",
                    "type": "zip"
                },
                "require": {
                    "composer/installers": "~1.0"
                }
            }
        },
        "mmenu": {
            "type": "package",
            "package": {
                "name": "mmenu/mmenu",
                "version": "8.5.17",
                "type": "drupal-library",
                "extra": {
                    "installer-name": "mmenu"
                },
                "dist": {
                    "url": "https://api.github.com/repos/FrDH/mmenu-js/zipball",
                    "type": "zip"
                },
                "require": {
                    "composer/installers": "~1.0"
                }
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "drupal/core-composer-scaffold": true,
            "acquia/blt": true,
            "oomphinc/composer-installers-extender": true,
            "acquia/blt-phpcs": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "ext-dom": "*",
        "ext-pdo": "*",
        "acquia/blt": "^13",
        "acquia/blt-behat": "^1.1",
        "acquia/blt-phpcs": "^1",
        "acquia/memcache-settings": "^1.1",
        "bower-asset/blazy": "^1.8",
        "drupal/acquia_connector": "^3",
        "drupal/acquia_purge": "^1.1",
        "drupal/adminimal_admin_toolbar": "^1.0",
        "drupal/better_exposed_filters": "^5.0-beta1",
        "drupal/block_exclude_pages": "^2",
        "drupal/captcha": "^1.1",
        "drupal/cloudflare": "^1.0.0-alpha7",
        "drupal/components": "^2.0-beta3",
        "drupal/config_ignore": "2.x-dev",
        "drupal/config_split": "^1.0.0",
        "drupal/core": "^9.1",
        "drupal/core-composer-scaffold": "^9.1",
        "drupal/core_context": "^1.0@beta",
        "drupal/default_content": "^2",
        "drupal/devel": "^4.0.0",
        "drupal/entity_embed": "^1.1",
        "drupal/environment_indicator": "^4",
        "drupal/extlink": "^1.0",
        "drupal/field_group": "^3.0",
        "drupal/field_permissions": "^1.0",
        "drupal/flag": "^4.0-beta2",
        "drupal/focal_point": "^1.5",
        "drupal/google_analytics": "^3",
        "drupal/honeypot": "^2",
        "drupal/inline_entity_form": "^1.0-rc7",
        "drupal/lightning_core": "^5",
        "drupal/lightning_layout": "^2.9",
        "drupal/lightning_media": "^4.6",
        "drupal/lightning_workflow": "^3.16",
        "drupal/linkicon": "1.x-dev",
        "drupal/purge": "^3.0.0",
        "drupal/purge_queuer_url": "^1.0",
        "drupal/qa_accounts": "1.x-dev",
        "drupal/r4032login": "^2",
        "drupal/recaptcha": "^3",
        "drupal/redirect": "^1.0",
        "drupal/responsive_menu": "^4.4",
        "drupal/search_api": "^1.17",
        "drupal/seckit": "^2",
        "drupal/shield": "^1.1",
        "drupal/simple_sitemap": "^3.7",
        "drupal/smart_trim": "^1.0",
        "drupal/svg_image": "^1.8",
        "drupal/twig_xdebug": "^1.2",
        "drupal/upgrade_status": "^3.0",
        "drupal/webform": "^6",
        "drupal/webform_views": "^5.0-alpha8",
        "drush/drush": "^11",
        "guzzlehttp/promises": "1.5.0",
        "jquery-ui/jquery-ui-touch-punch": "dev-master",
        "laminas/laminas-zendframework-bridge": "^1.4",
        "mikemadison13/blt-lando": "dev-main",
        "mmenu/mmenu": "^8.5",
        "superfish/superfish": "^1.7"
    },
    "scripts": {
        "post-install-cmd": [
            "PhantomInstaller\\Installer::installPhantomJS"
        ],
        "post-update-cmd": [
            "PhantomInstaller\\Installer::installPhantomJS"
        ],
        "post-create-project-cmd": [
            "blt internal:create-project:init-repo"
        ],
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "nuke": [
            "rm -rf vendor composer.lock docroot/core docroot/modules/contrib docroot/profiles/contrib docroot/themes/contrib",
            "@composer clearcache --ansi",
            "@composer install --ansi"
        ]
    },
    "extra": {
        "blt": {
            "update": true
        },
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "docroot/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "docroot/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "docroot/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "drush/Commands/{$name}": [
                "type:drupal-drush",
                "type:drupal-drush",
                "type:drupal-drush"
            ]
        },
        "patches": {
            "drupal/core": {
                "2869592 - Disabled update module shouldn't produce a status report warning": "https://www.drupal.org/files/issues/2020-02-07/2869592-remove-update-warning-34.patch"
            },
            "drupal/shield": {
                "fixes install from config issue": "https://www.drupal.org/files/issues/2021-11-03/3194989-12.patch"
            },
            "acquia/blt": {
                "fixes zsh git hooks": "https://github.com/acquia/blt/pull/4497.patch",
                "debugging": "patches/debug.patch"
            },
            "mikemadison13/blt-lando": {
                "m1 chrome fixes": "https://github.com/mikemadison13/blt-lando/pull/32.patch"
            }

        },
        "drupal-scaffold": {
            "initial": {
                "sites/default/default.services.yml": "sites/default/services.yml",
                "sites/default/default.settings.php": "sites/default/settings.php"
            },
           "locations": {
                "web-root": "docroot/"
            },
            "file-mapping": {
                "[web-root]/.htaccess": false,
                "[web-root]/robots.txt": false,
                "[web-root]/sites/development.services.yml": false
            }
        },
        "enable-patching": true,
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches-ignore": {
            "drupal/lightning_core": {
                "drupal/core": {
                    "2869592 - Disabled update module shouldn't produce a status report warning": "https://www.drupal.org/files/issues/2869592-remove-update-warning-7.patch"
                }
            }
        }
    },
    "autoload": {
        "psr-4": {
            "Example\\": "blt/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Tests\\PHPUnit\\": "tests/phpunit/src/"
        }
    }
}
